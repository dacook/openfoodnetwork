= select_tag :per_page,
    options_for_select([15, 25, 50, 100].collect{|i| [t('pagination.per_page.per_page', scope:, num: i), i]}, pagy.items),
    class: "no-input no-search primary per-page per-page-dropdown",
    data: { controller: "tom-select search", action: "change->search#changePerPage", "tom-select-options-value": '{ "plugins": [] }'}
%span.per-page-feedback
  = t("pagination.total_html", scope:, total: pagy.count, from: pagy.from, to: pagy.to)
